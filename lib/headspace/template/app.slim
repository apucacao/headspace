header
  a#home href="#" data-icon="H" title="Go to the index"
  a#add-link href="#" data-icon="&" title="Contribute a link"

  #star-filter
    input#star-filter-input name="star-filter" type="checkbox"
    label for="star-filter-input" data-icon="S" title="Show only starred links"

  form#search
    label for="q" data-icon="s" title="Search"
    input name="q" id="q" type="search"

#links
  - for link in @rendered_links do
    .link
      == link

#pagination
  span.all-loaded All links loaded
  a.load-more href="#" title="Load more links"
    span data-icon="r"
    span Load more links
  span.loading-more Loading more links

#dialog
  form#new-link action="#"
    h2
      span data-icon="+"
      span class="title" Add a link
    div
      label for="url" URL
      input#url type="url" name="url"
      label for="note" Note
      textarea#note name="note" rows="4"
      .actions
        button type="sumbit" data-icon="2" title="Save"
        button class="close" data-icon="D" title="Cancel"

#status